@model Employee

<div class= "container   box-shadow p-5" >

	<div>
	<h2>Agregar empleado</h2>
	</div>

	<form method="post"  asp-controller="Employees" asp-action = "Create">
		<div asp-validation-summary="All"> </div>
		<div class= "form-row">
			<div class="form-group col-md-6"> 
				<label asp-for="Name">Nombre del empleado:</label>
				<input type="text" class="form-control mb-3 " asp-for="Name" placeholder="Ingrese el nombre del empleado"/>
				<span asp-validation-for="Name" class="alert-danger"></span>
			</div>

			
			<div class="form-group col-md-6"> 
				<label asp-for="Designation">Cargo del empleado:</label>
				<input type="text" class="form-control mb-3 " asp-for="Designation" placeholder="Ingrese el cargo del empleado"/>
				<span asp-validation-for="Designation" class="alert-danger"></span>
			</div>

			
			<div class="form-group col-md-6"> 
				<label asp-for="Address">Dirección</label>
				<input type="text" class="form-control mb-3 " asp-for="Address" placeholder="Ingrese la direccion"/>
				<span asp-validation-for="Address" class="alert-danger"></span>
			</div>

			<div class="form-group col-md-6 mb-3"> 
				<label asp-for="RecordCreation">Fecha de Creacion</label>
				<input type="datetime-local" class="form-control mb-3 " asp-for="RecordCreation" />
				<span asp-validation-for="RecordCreation" class="alert-danger"></span>
			</div>



		</div>

		<button type="submit" class="btn btn-primary btn-lg p-2">

			<i class="bi bi-file-plus-fill"></i>
			Guardar
		</button>

		<a asp-controller="Employees" asp-action="Index" class="btn btn-lg btn-warning p-2 "> Regresar </a>
	</form>
</div>

@section Scripts{

	@{
		<partial name="_ValidationScriptsPartial"/>
	}


}